<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ln_layout_top"
        android:orientation="vertical"
        android:layout_width="@dimen/onboardingText_width"
        android:layout_height="@dimen/onboardingText_height"
        android:layout_marginStart="@dimen/headerLayout_marginStart"
        android:layout_marginTop="@dimen/headerLayout_marginTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textview_welcome"
            android:layout_width="@dimen/onboardingText_width"
            android:layout_height="@dimen/onboardingText_height"
            android:text="@string/onboarding_text"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/onboardingText_textSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/onboardingBrush_width"
            android:layout_height="@dimen/onboardingBrush_height"
            android:src="@drawable/brush"
            android:layout_marginTop="@dimen/onboardingBrush_marginTop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/onboardingImage_width"
        android:layout_height="@dimen/onboardingImage_height"
        android:layout_marginTop="@dimen/onboardingImage_marginTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/onboarding" />


    <Button
        android:id="@+id/button_start"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:padding="@dimen/button_padding"
        android:background="@drawable/button_shape"
        android:text="@string/button_continue"
        android:textSize="@dimen/button_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/bottom_text"
        android:layout_width="@dimen/onboardingPat_width"
        android:layout_height="@dimen/onboardingPat_height"
        android:layout_marginTop="@dimen/onboardingPat_marginTop"
        android:src="@drawable/pattrince"
        app:layout_constraintEnd_toEndOf="@+id/button_start"
        app:layout_constraintStart_toStartOf="@+id/button_start"
        app:layout_constraintTop_toBottomOf="@+id/button_start" />



</androidx.constraintlayout.widget.ConstraintLayout>